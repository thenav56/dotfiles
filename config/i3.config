# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $wallpaper ~/Downloads/wallpaper.jpg

# ALT -> Mod1
# WIN -> Mod4
set $mod Mod1

set $Left  h
set $Right l
set $Up    k
set $Down  j

set $popup-height 34

font pango:CaskaydiaCove Nerd Font 9

exec_always --no-startup-id setxkbmap -option caps:escape

exec_always --no-startup-id picom -b

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Sreen brightness controls
set $brightness_cmd ~/.dotfiles/commands/monitor-screen-brightness
bindsym XF86MonBrightnessUp exec --no-startup-id $brightness_cmd +
bindsym XF86MonBrightnessDown exec --no-startup-id $brightness_cmd -

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec kitty --single-instance

# kill focused window
bindsym $mod+Shift+q kill

# Notification
exec_always --no-startup-id dunst &
bindsym $mod+n exec dunstctl close
bindsym $mod+Shift+n exec dunstctl history-pop

# start dmenu (a program launcher)
# bindsym $mod+d exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop

# change focus
# -- vi
bindsym $mod+$Left focus left
bindsym $mod+$Down focus down
bindsym $mod+$Up focus up
bindsym $mod+$Right focus right
# -- cursor
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


# move focused window
# -- vi
bindsym $mod+Shift+$Left move left
bindsym $mod+Shift+$Down move down
bindsym $mod+Shift+$Up move up
bindsym $mod+Shift+$Right move right
# -- cursor
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# move focused workspace
bindsym $mod+ctrl+$Left move workspace to output left
bindsym $mod+Ctrl+$Right move workspace to output right
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child


# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
bindsym $mod+minus scratchpad show


# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

set $resize resize
# resize window (you can also use the mouse for that)
mode "$resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "$resize"

exec_always --no-startup-id ~/.dotfiles/config/polybar/launch_polybar.sh

bindsym $mod+Shift+f exec polybar-msg cmd toggle

# Gaps
smart_gaps on
gaps inner 5
gaps outer 0

# wallpaper
exec_always --no-startup-id feh --bg-fill $wallpaper

set $WHITE #282A2E
set $GRAY #ffffff
set $CYAN #23CDB3
set $GREEN #8BC34A
set $RED #f44336

# Type                  border  background text    indicator child_border
client.focused          $CYAN   $CYAN      $WHITE  $GREEN    $GREEN
client.focused_inactive $GRAY   $WHITE     $GRAY   $GRAY     $GRAY
client.unfocused        $WHITE  $WHITE     $GRAY   $WHITE    $GRAY
client.urgent           $RED    $RED       $WHITE  $RED      $RED
client.placeholder      $GRAY   $GRAY      $WHITE  $GRAY     $GRAY
client.background       $WHITE

# Hide titlebar
for_window [class="^.*"] border pixel 2 title_format " %title"


# Float
for_window [class="Thunderbird" instance="Calendar"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="scratchpad"] floating enable

# class instance window_role con_id id window_type con_mark title urgent workspace machine floating_from
# tiling_from tiling floating all
for_window [instance="(?i)spotify"] floating enable
for_window [instance="(?i)blueman"] floating enable
for_window [instance="(?i)blueberry.py"] floating enable, move down $popup-height px
for_window [instance="(?i)pavucontrol"] floating enable, move down $popup-height px
for_window [instance="(?i)gnomecast"] floating enable, move down $popup-height px
for_window [instance="(?i)solaar"] floating enable, move down $popup-height px
for_window [title="Firefox Developer Edition — Sharing Indicator"] floating enable, resize set width 80px heigh#

# Don't change focus with mouse
focus_follows_mouse no

# Assign programs to workspace
assign [class="Gitg"] 9
# assign [class="Slack"] 10

# Hide borders when only one window is present
hide_edge_borders smart

# Display popup if it belongs to the fullscreen application only
popup_during_fullscreen smart
focus_on_window_activation smart

# Automatic back-and-forth when switching to the current workspace
workspace_auto_back_and_forth no

# Locking
set $LOCKER ~/.dotfiles/config/lock/lock.sh
set $DISPLAY_CMD ~/.dotfiles/commands/display-profile

# -- Auto
exec --no-startup-id ~/.dotfiles/config/xautolock/run.sh
bindsym $mod+shift+x exec $LOCKER

# -- i3 Mode
set $mode_system System (l) lock, (e) logout, (s) suspend, (Shift+r) reboot, (Shift+s) shutdown
set $display_system 1 (All), 2 (Primary)

mode "$mode_system" {
    bindsym l exec --no-startup-id $LOCKER, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $LOCKER && systemctl suspend, mode "default"
    bindsym Shift+r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "$display_system" {
    bindsym 1 exec --no-startup-id $DISPLAY_CMD all, mode "default"
    bindsym 2 exec --no-startup-id $DISPLAY_CMD primary,, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "$mode_system"
bindsym $mod+Shift+d mode "$display_system"

# Screenshots
# -- File
bindsym Print exec --no-startup-id ~/.dotfiles/config/maim.sh
# -- Clipboard
bindsym Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png
